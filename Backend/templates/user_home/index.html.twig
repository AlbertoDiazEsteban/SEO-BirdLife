{% extends 'base.html.twig' %}

{% block title %}Hello UserHomeController!{% endblock %}
{% block head %}
    {{ parent() }}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/stylehome.css') }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <style>
            .custom-container {
                text-align: left;
                margin-top: 20px;
            }
        </style>
    {% endblock %}
{% endblock %}

{% block body %}
    <div class="container-fluid d-flex justify-content-center bg-image" style="min-height: 100vh;">
        <div class="custom-container">
        <div class="d-flex">
            <img src="{{ asset('images/logo-seo.svg') }}" alt="Logo" class="logo align-self-start" style="width: 150px;">

        </div>
            <h1 class="mt-4">Bienvenidoa la Api de seobirdlife</h1>
            <p class="font-italic">Aquí tendrás el acceso al json:</p>
            <ul class="list-unstyled">
                <li class="mb-3">
                    *Voluntarios:
                    <a href="{{ path('app_voluntarios_apis') }}" class="btn btn-primary">mostrar</a>
                </li>

                <li class="mb-3">
                    *Socios:
                    <a href="{{ path('app_socios_apis') }}" class="btn btn-primary">mostrar</a>
                </li>

                <li class="mb-3">
                    *Presupuesto (ingresos y gastos):
                    <a href="{{ path('app_presupuesto_apis') }}" class="btn btn-primary">mostrar</a>
                </li>

                <li class="mb-3">
                    *Seguidores:
                    <a href="{{ path('app_seguidores/rrss_apis') }}" class="btn btn-primary">mostrar</a>
                </li>
            </ul>
            <a class="btn btn-success btn-lg mt-4" href="{{ path('app_home') }}">Volver al Inicio</a>
        </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
