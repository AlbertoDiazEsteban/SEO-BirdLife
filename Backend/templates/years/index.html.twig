{% extends 'base.html.twig' %}

{% block title %}Años{% endblock %}

{% block body %}
<div class="container my-3">
    <h1>Año</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for year in years %}
            <tr>
                <td>{{ year.id }}</td>
                <td>{{ year.year }}</td>
                <td>
                    <a href="{{ path('app_years_show', {'id': year.id}) }}">mostrar |</a>
                    <a href="{{ path('app_years_edit', {'id': year.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_years_new') }}">Añadir datos</a><br>
    <a class="btn btn-success btn-lg mt-4" href="{{ path('app_client_home') }}">Volver al panel</a>
    </div>
{% endblock %}
